{{!
    @template mod_zoom/breakoutrooms/room/data

    Context variables required for this template:
    * roomid Room ID.
    * roomname Room name.
    * courseparticipants Array of participants.
    * coursegroups Array of groups.
      
    Example context (json):
    {
        "roomid": "1",
        "roomname": "room1",
        "courseparticipants": [
            {
                "participantid": "2",
                "participantemail": "p@example.com",
                "selected": true
            }
        ],
        "coursegroups": [
            {
                "groupid": "3",
                "groupname": "group3",
                "selected": true
            }
        ]
    }
}}
<label for="room-name-{{roomid}}">Room name</label>
<input type="text" class="form-control col-sm-6 room-name" id="room-name-{{roomid}}" name="room-name-{{roomid}}" value="{{roomname}}">
<input type="hidden" name="{{toclone}}rooms[{{roomid}}]" value="{{roomname}}">
<hr>
<span>Participants</span>
{{> zoom/breakoutrooms/room/participants }}
<hr>
<span>Participant groups</span>
{{> zoom/breakoutrooms/room/groups }}
